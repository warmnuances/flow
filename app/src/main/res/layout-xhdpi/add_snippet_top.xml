<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:background="@color/colorGreyBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/amtContainer"
            style="@style/EditTextContainer"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_rectangles"
            android:stateListAnimator="@drawable/edit_text_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/etAmount"
                android:ellipsize="end"
                android:textSize="24sp"
                android:maxLength="8"
                style="@style/EditTextStyle.Big"
                android:drawableStart="@color/colorGreyBackground"
                android:hint="@string/edit_text_amount" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/inflowOutflow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:background="@color/colorAccent"
            android:elevation="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/amtContainer"
            app:layout_constraintStart_toStartOf="@+id/amtContainer"
            app:layout_constraintTop_toTopOf="@+id/amtContainer" />


    </android.support.constraint.ConstraintLayout>


</merge>
